<%= simple_form_for @turn,
                    html: {
                      class: "turn form",
                      data: { turbo: false }
                    } do |f| %>  
  <% if @turn.errors.any? %>
    <div class="error-message">
      <%= @turn.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  
  <%= f.hidden_field :card_id, value: @turn.card_id || params[:card_id] %>
  <%= f.hidden_field :game_id, value: @turn.game_id || params[:game_id] %>

  <%= f.submit "Create a turn", class: "bg-primary-red hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>
<% end %>